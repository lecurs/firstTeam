.middlePart{
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
}
.imgBig{
  width: 680rpx;
  height: 400rpx;
}
.cloudAndTitle{
  padding-left: 30rpx;
}
.cloud{
  width: 70rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.viceTitle{
  font-size: 12pt;
}
.cardsFirst{
  width: 750rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}
.goodInfo{
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
}
.money{
  width: 320rpx;
  height: 200rpx;
}
.goods{
  flex: 1;
  font-size: 10pt;
}
.nowPrice{
  font-size: 10pt;
  color: #cc403f;
  margin-right: 10rpx;
}
.pastPrice{
  font-size: 9pt;
  text-decoration: line-through;
  color: #7c7c7c;
}
.cardLast{
  width: 320rpx;
  margin-left: 28rpx;
  box-shadow: 0 10rpx 10rpx #f0f0f0;
  margin-bottom: 100rpx;
}
.goodInfoLast{
  width: 320rpx;
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
}
.footerInfo{
  display: inline-block;
  width: 320rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 8pt;
}
.cardItem{
  box-shadow: 0 10rpx 10rpx #f0f0f0;
}